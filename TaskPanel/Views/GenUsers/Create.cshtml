@model TaskPanel.Models.GenUser
@{
    ViewData["Title"] = "User Registration";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/TaskPanel.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-papmtrL++1n1tx1vhb9M9UHHc7vC6oQ3t9KhA6xX3yUc3hLLkCjzUgM9p6x6CNQHcALnZtw0H9z5jqP8G2ZzKg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Gradient Background -->
<style>
    body {
        background: linear-gradient(135deg, #0a0f24, #102a44, #1b4b8a);
        color: #fff;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .registration-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
        padding: 40px;
        width: 100%;
        max-width: 480px;
        transition: 0.3s ease-in-out;
    }

    .registration-card:hover {
        box-shadow: 0 0 40px rgba(0, 153, 255, 0.6);
    }

    h1 {
        text-align: center;
        font-weight: 600;
        margin-bottom: 20px;
        color: #00aaff;
    }

    label {
        font-weight: 500;
        color: #e0e0e0;
    }

    .form-control:focus {
        border-color: #00aaff;
        box-shadow: 0 0 8px #00aaff;
        background-color: rgba(255, 255, 255, 0.25);
    }

    .btn-register {
        width: 100%;
        border-radius: 10px;
        background: linear-gradient(90deg, #00aaff, #0066ff);
        border: none;
        color: white;
        font-weight: bold;
        padding: 12px;
        margin-top: 10px;
        transition: 0.3s;
    }

    .btn-register:hover {
        background: linear-gradient(90deg, #0066ff, #00aaff);
        box-shadow: 0 0 15px #00aaff;
    }

    a.back-link {
        display: block;
        text-align: center;
        color: #00aaff;
        margin-top: 15px;
        text-decoration: none;
    }

    a.back-link:hover {
        color: #fff;
        text-decoration: underline;
    }

    .required::after {
        content: " *";
        color: red;
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    /* Default input look (already has) */
    .form-control {
        background-color: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #fff;
        border-radius: 10px;
        padding: 10px;
        transition: 0.3s;
    }

        /* When input has text */
        .form-control.filled {
            background-color: #fff !important;
            color: #000 !important;
            border: 1px solid #00aaff;
            box-shadow: 0 0 8px #00aaff;
        }

    html, body {
        height: 100%;
        overflow: hidden; /* 🚫 disables scrolling */
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0a0f24, #102a44, #1b4b8a);
        color: #fff;
        font-family: 'Poppins', sans-serif;
        height: 100vh; /* ensures full screen height */
    }

    .registration-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
        padding: 40px;
        width: 90%;
        max-width: 480px;
        transition: 0.3s ease-in-out;
    }

</style>

<div class="registration-card">
    <h1>Register</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="CUserName" class="control-label required">User Name</label>
            <input asp-for="CUserName" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="CUserName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CPassword" class="control-label required">Password</label>
            <input asp-for="CPassword" type="password" class="form-control" placeholder="Create a password" />
            <span asp-validation-for="CPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CEmailId" class="control-label">Email Id(optional)</label>
            <input asp-for="CEmailId" type="email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="CEmailId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NMobileNo" class="control-label">Mobile No(optional)</label>
            <input asp-for="NMobileNo" class="form-control" placeholder="Enter your mobile number" />
            <span asp-validation-for="NMobileNo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CDescription" class="control-label">Description (optional)</label>
            <input asp-for="CDescription" class="form-control" placeholder="Add a short description (optional)" />
            <span asp-validation-for="CDescription" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-register">Create Account</button>
    </form>

    @* <a asp-action="Index" class="back-link">← Back to User List</a> *@
    <a asp-action="Login" class="back-link">← Back to Login</a>

</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $(".form-control").on("input", function () {
                if ($(this).val().trim() !== "") {
                    $(this).addClass("filled");
                } else {
                    $(this).removeClass("filled");
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
