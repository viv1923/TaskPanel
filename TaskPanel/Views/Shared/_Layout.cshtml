@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var userName = HttpContextAccessor.HttpContext?.User?.Identity?.Name ?? "Guest";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskPanel.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-papmtrL++1n1tx1vhb9M9UHHc7vC6oQ3t9KhA6xX3yUc3hLLkCjzUgM9p6x6CNQHcALnZtw0H9z5jqP8G2ZzKg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Custom sexy navbar */
        .navbar {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #fff !important;
        }

        .nav-link {
            color: #f8f9fa !important;
            font-size: 1.1rem;
            margin: 0 10px;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        .profile-dropdown .dropdown-menu {
            right: 0;
            left: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow">
            <div class="container-fluid">
                <!-- Logo + Project Name -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height:30px; width:auto; margin-right:8px;" />
                    TaskPanel
                </a>

                <!-- Center Nav Links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>

                <!-- Right Profile & Logout -->
                <div class="d-flex align-items-center ms-auto">
                    <!-- Profile -->
                    <div class="me-3 d-flex align-items-center text-white">
                        <i class="fa-solid fa-user-circle fa-lg me-2"></i>
                        <span>@userName</span>
                    </div>

                    <!-- Logout -->
                    <form asp-controller="GenUsers" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>

                </div>

            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-2 bg-light">
        <div class="container text-center">
            &copy; 2025 - TaskPanel - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
